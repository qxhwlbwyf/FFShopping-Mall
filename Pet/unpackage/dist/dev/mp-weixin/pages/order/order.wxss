.cartlist {
  padding-top: 85rpx;
  background-color: #e6e6e6;
  width: 100%;
  min-height: 300rpx;
}
.cartlist .cartitem {
  background-color: #FFFFFF;
  height: 50px;
  margin-bottom: 10px;
}
.cartlist .cartitem .xuanzhong {
  float: left;
  line-height: 50px;
  padding-left: 5px;
}
.cartlist .cartitem image {
  display: inline-block;
  height: 40px;
  width: 40px;
  padding: 5px 0;
  float: left;
}
.cartlist .cartitem .itemright {
  display: inline-block;
  padding: 5px;
}
.cartlist .cartitem .itemright .del {
  margin-left: 10px;
  background-color: red;
  color: #FFFFFF;
  border-radius: 3px;
  padding: 0 5px;
}
